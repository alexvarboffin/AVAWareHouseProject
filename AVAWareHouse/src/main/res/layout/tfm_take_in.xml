<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/TfmTakeIn_edScan"
            android:textSize="20sp"
            android:imeOptions="actionGo"
            android:inputType="number"
            android:hint="Штрих-код"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/TfmTakeIn_edSerials"
            android:textSize="20sp"
            android:imeOptions="actionGo"
            android:inputType="number"
            android:hint="Серийный номер"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/TfmTakeIn_edWhZone"
            android:textSize="20sp"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:hint="Адрес хранения"/>
    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/TfmTakeIn_gvData"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="Очистить"
            android:id="@+id/TfmTakeIn_btClear"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="Сохранить"
            android:id="@+id/TfmTakeIn_btConfirm"/>
    </LinearLayout>

</LinearLayout>