<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/fmClssInfo_pnMain"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="16dp">
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="4dp">
        <EditText
            android:id="@+id/TfmClssInfo_edClssId"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="3"
            android:imeOptions="actionSearch"
            android:hint="@string/fmClssInfo_edClssId"
            android:inputType="number"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TfmClssInfo_btKeyboard"
            android:drawableLeft="@drawable/btn_keyboard"/>
        <Button
            android:id="@+id/TfmClssInfo_btSearch"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="@string/fmClssInfo_btSearch"/>
    </LinearLayout>
    <TextView
        android:id="@+id/TfmClssInfo_lbFullName"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="@string/fmClssInfo_lbFullName"
        android:textSize="24sp"/>
    <TextView
        android:id="@+id/TfmClssInfo_lbArticle"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="@string/fmClssInfo_lbShortName"
        android:textSize="18dp"/>
    <TextView
        android:id="@+id/TfmClssInfo_lbColor"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="@string/fmClssInfo_lbColor"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/TfmClssInfo_lbOst3"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="@string/fmClssInfo_lbOst3"
        android:textSize="20dp"/>
</LinearLayout>